<odoo>
    <!--    Patient Detail-->
    <template id="report_patient_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <t t-call="demo_odoo15.custom_header"/>

                        <br></br>
                        <div class="oe_structure"/>
                        <div class="row">
                            <table class="table table-condensed">
                                <tr>
                                    <td width="40%">
                                        <p style="text-align:center;padding-top:10px;">
                                            <img t-if="not o.image"
                                                 t-att-src="'/web/static/src/img/placeholder.png'" height="120"
                                                 border="1" width="120"/>
                                            <img t-if="o.image"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(o.image)"
                                                 height="120" border="1" width="120"/>
                                        </p>
                                    </td>
                                    <td width="60%">
                                        <table>
                                            <tr>
                                                <td colspan="3" class="text-center">
                                                    <h3 t-field="o.patient_name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <strong>
                                                            Age
                                                        </strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.age"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span>
                                                        <strong>
                                                            Reference
                                                        </strong>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>:</span>
                                                </td>
                                                <td>
                                                    <span t-field="o.reference"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <t t-if="o.appointment_ids">
                            <h3>Appointment Details</h3>
                            <table class="table table-sm o_main_table" name="appointments">
                                <thead>
                                    <tr>
                                        <th name="th_reference" class="text-left">
                                            <span>Reference</span>
                                        </th>
                                        <th name="th_doctor" class="text-left">
                                            <span>Doctor</span>
                                        </th>
                                        <th name="th_date" class="text-left">
                                            <span>Appointment Date</span>
                                        </th>
                                        <th name="th_checkup_date" class="text-left">
                                            <span>Checkup Date</span>
                                        </th>

                                    </tr>
                                </thead>
                                <t t-set="appointment_count" t-value="0"/>
                                <t t-foreach="o.appointment_ids" t-as="line">
                                    <t t-set="appointment_count" t-value="appointment_count + 1"/>
                                    <tr>
                                        <td>
                                            <span t-field="line.reference"/>
                                        </td>

                                        <td>
                                            <span t-field="line.doctor_id"/>
                                        </td>
                                        <td>
                                            <span t-field="line.appointment_date"/>
                                        </td>
                                        <td>
                                            <span t-field="line.checkup_date"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="3">
                                        Total Appointments
                                    </td>
                                    <td>
                                        <t t-esc="appointment_count"/>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>